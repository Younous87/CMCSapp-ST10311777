@{
	ViewData["Title"] = "Create Claim";
}

<header class="w3-container w3-center" style="padding:120px; background-color: #ffcccc;">
	<h1 class="w3-jumbo w3-text-red"><b>Create Claim</b></h1>
	<div style="width: 20%; height: 7px; background-color: red; margin: 20px auto;" class="w3-round"></div>
	<div class="w3-row-padding w3-padding-64 w3-container">
		<div class="w3-content">
			<div class="w3-center">
				<h2>Claim List</h2>
				<table class="table">
					<thead>
					<tr>
						<th>Claim ID </th> 
						<th>Date </th> 
						<th>Hours Worked </th> 
						<th>Hourly Rate</th> 
						<th>Status</th>
					</tr>
					</thead>
					<tbody>
					
					<tr>
						<td>001 </td> 
						<td>10/09/2024</td> 
						<td>36 </td> 
						<td>100</td>
						<td>Accepted</td>
					</tr>
					
					</tbody>
				</table>
				<br />

				<form id="add-claim-form" asp-action="" method="post">
					<h2>Claim Info</h2>
					<p/><input type="text" name="HoursWorked" placeholder="Hours Worked" required/>
					<p/><input type="text" name="HourlyRate" placeholder="Hourly Rate" required/>
					<p/><button class="w3-button w3-black w3-padding-small w3-hover-grey" type="submit">Submit</button>
				</form>
				<br/>


				<form id="upload-documents-form" asp-action="" method="post" enctype="multipart/form-data">
					<h2>Supporting Documents</h2>
					<p/><input type="file" name="file" required/>
					<p/><button class="w3-button w3-black w3-padding-small w3-hover-grey" type="submit">Upload Document</button>
				</form>
				<br/>
			</div>
		</div>
	</div>

</header>

<body style="background-color: #ffcccc;"></body>



